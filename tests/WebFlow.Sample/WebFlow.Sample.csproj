<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <TypeScriptToolsVersion>2.8</TypeScriptToolsVersion>
    <AssemblyName>Acklann.WebFlow.Sample</AssemblyName>
    <RootNamespace>Acklann.WebFlow</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <TranspileOnBuild>true</TranspileOnBuild>
    <WebFlowConfigName>webFlow.config</WebFlowConfigName>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <LangVersion>7.2</LangVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <LangVersion>7.2</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\src\WebFlow\intellisense.xsd" Link="intellisense.xsd">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.All" Version="2.0.6" />
  </ItemGroup>

  <Import Project="..\..\artifacts\msbuild\build\*\$(RootNamespace).targets" />
</Project>