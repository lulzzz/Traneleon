<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Acklann.WebFlow</RootNamespace>
    <AssemblyName>Acklann.WebFlow</AssemblyName>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netstandard2.0\Acklann.WebFlow.xml</DocumentationFile>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <PropertyGroup>
    <ExternalDependencies>dependencies.zip</ExternalDependencies>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Acklann.GlobN" Version="1.2.1" />
    <PackageReference Include="Acklann.NShellit" Version="0.0.15-rc" />
    <PackageReference Include="Akka" Version="1.3.6" />
    <PackageReference Include="HtmlAgilityPack" Version="1.8.1" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="$(ExternalDependencies)">
      <Visible>false</Visible>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Remove="dependencies\**" />
    <None Remove="node_modules\**" />
    <Compile Remove="node_modules\**" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Tasks\" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Xmlns.tt">
      <Generator>TextTemplatingFileGenerator</Generator>
      <LastGenOutput>Xmlns.cs</LastGenOutput>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Service Include="{508349b6-6b84-4df5-91f0-309beebad82d}" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Xmlns.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>Xmlns.tt</DependentUpon>
    </Compile>
  </ItemGroup>

  <Target Name="RestoreExternalPackages" BeforeTargets="CoreCompile">
    <Exec Command="powershell -ExecutionPolicy ByPass -NoProfile -File restore.ps1 &quot;$(ExternalDependencies)&quot; &quot;$(MSBuildProjectName)&quot;" />
  </Target>

  <Target Name="CleanExternalPackages" AfterTargets="Clean">
    <RemoveDir Directories="node_modules" />
    <Delete Condition="Exists('$(ExternalDependencies)')" Files="$(ExternalDependencies)" />
  </Target>
</Project>